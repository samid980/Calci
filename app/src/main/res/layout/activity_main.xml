<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#D6BB8D"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:text="0"
        android:gravity="right"
        android:layout_above="@+id/outputTxt"
        android:paddingRight="20dp"
        android:id="@+id/inputTxt"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="80dp"
        android:text="0"
        android:gravity="right"
        android:layout_above="@+id/numbers"
        android:paddingRight="20dp"
        android:id="@+id/outputTxt"/>

    <LinearLayout
        android:id="@+id/numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/on"
                android:text="ON"
                android:textColor="@color/black"
                android:textSize="25dp"
                style="@style/Button1"/>

            <Button
                android:id="@+id/number7"
                android:text="7"
                android:textColor="@color/black"
                style="@style/Button2"/>

            <Button
                android:id="@+id/number4"
                android:text="4"
                android:textColor="@color/black"
                style="@style/Button2"/>

            <Button
                android:id="@+id/number1"
                android:text="1"
                android:textColor="@color/black"
                style="@style/Button2"/>

            <Button
                android:id="@+id/del"
                android:text="DEL"
                android:textColor="@color/black"
                android:textSize="25dp"
                style="@style/Button1"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/off"
                android:text="OFF"
                android:textColor="@color/black"
                android:textSize="25dp"
                style="@style/Button1"/>

            <Button
                android:id="@+id/number8"
                android:text="8"
                android:textColor="@color/black"
                style="@style/Button2"/>

            <Button
                android:id="@+id/number5"
                android:text="5"
                android:textColor="@color/black"
                style="@style/Button2"/>

            <Button
                android:id="@+id/number2"
                android:text="2"
                android:textColor="@color/black"
                style="@style/Button2"/>

            <Button
                android:id="@+id/number0"
                android:text="0"
                android:textColor="@color/black"
                style="@style/Button2"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/ac"
                android:text="AC"
                android:textColor="@color/black"
                android:textSize="25dp"
                style="@style/Button1"/>

            <Button
                android:id="@+id/number9"
                android:text="9"
                android:textColor="@color/black"
                style="@style/Button2"/>

            <Button
                android:id="@+id/number6"
                android:text="6"
                android:textColor="@color/black"
                style="@style/Button2"/>

            <Button
                android:id="@+id/number3"
                android:text="3"
                android:textColor="@color/black"
                style="@style/Button2"/>

            <Button
                android:id="@+id/point"
                android:text="."
                android:textColor="@color/black"
                style="@style/Button2"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/div"
                android:text="/"
                style="@style/Button1"/>

            <Button
                android:id="@+id/multiply"
                android:text="*"
                style="@style/Button1"/>

            <Button
                android:id="@+id/subtract"
                android:text="-"
                style="@style/Button1"/>

            <Button
                android:id="@+id/add"
                android:text="+"
                style="@style/Button1"/>

            <Button
                android:id="@+id/equals"
                android:textColor="@color/black"
                android:text="="
                style="@style/Button2"/>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>